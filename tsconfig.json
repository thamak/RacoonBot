{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es2016", "dom"],
        "noImplicitAny": false,
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "outDir": "types",
        "strictNullChecks": true,
        "typeRoots": [
          "node_modules/@types",
          "src/@types"
        ]
    }
}
